<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.fragmentos.EntrenamientosFragment"
    android:orientation="vertical"
    android:id="@+id/fragment_rutinas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BlancoFondo"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/seleccionar_entrenamiento"
            android:fontFamily="@font/poppins_black"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginVertical="20dp"
            />
        <HorizontalScrollView
            android:id="@+id/hsvSubMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center">
                <Button
                    android:id="@+id/btnPanelDeControl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/panel_de_control"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background_light"
                    android:layout_marginEnd="10dp"
                    />
                <Button
                    android:id="@+id/btnEntrenamientos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/entrenamientos"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background_light"
                    android:layout_marginStart="10dp"
                    />
                <Button
                    android:id="@+id/btnEliminarRutina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eliminar_rutina"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background_light"
                    android:layout_marginStart="10dp"
                    />
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tvRutinaName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/rutinas_hombre"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginVertical="20dp"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            />
            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_arrow_down"
                android:layout_marginEnd="10dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line"
            android:layout_marginBottom="10dp"
            />
        <ProgressBar
            android:id="@+id/pbCargaRutina"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
    </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRutinas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:elevation="-1dp" />


</LinearLayout>