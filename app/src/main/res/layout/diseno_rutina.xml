<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">


    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_rounded"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Imagen de fondo -->
        <ImageView
            android:id="@+id/imagenEntrenamientoFondo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background_gimnasio"
            android:scaleType="centerCrop"
            android:alpha="0.8" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background_orange_transparency"/>

        <!-- Contenido dentro del CardView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Texto dentro del CardView -->
            <TextView
                android:fontFamily="@font/poppins_extrabolditalic"
                android:id="@+id/textoDisenoRutina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aumento de masa muscular"
                android:textSize="20sp"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>