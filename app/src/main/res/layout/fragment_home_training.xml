<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.usecases.home.fragmentosSegundarios.fragmento_home_con_entrenamiento.fragment_home_training">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center"
                android:paddingTop="20dp"
                android:textSize="20dp"
                android:text="Entrenamientos" />


            <HorizontalScrollView
                android:id="@+id/horizontal_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                >

                <!-- Contenido horizontal del scroll view -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/botoneraHorizontalLayout"
                    android:orientation="horizontal">

                    <!-- Elementos dentro del scroll view -->
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/panelControlButton"
                        android:text="Panel de control" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/entrenamientoButton"
                        android:text="Entrenamientos" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dietaButton"
                        android:text="Dietas" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ejerciciosButton"
                        android:text="Ejercicios" />

                    <!-- Puedes agregar más elementos aquí -->
                </LinearLayout>
            </HorizontalScrollView>

            <include
                layout="@layout/diseno_entrenamiento_con_entrenamiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>