<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp"/>
            <gradient
                android:startColor="@color/blue"
                android:centerColor="@color/blue_light"
                android:endColor="@color/blue_light2"
                android:angle="90" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip android:clipOrientation="horizontal" android:gravity="center">
            <shape>
                <corners android:radius="5dp"/>
                <gradient
                    android:startColor="@color/orange_dark"
                    android:centerColor="@color/splash_background"
                    android:endColor="@color/orange_light"
                    android:angle="180" />
            </shape>
        </clip>
    </item>
    <item android:id="@+id/progress">
        <clip android:clipOrientation="horizontal" android:gravity="center">
            <shape>
                <corners android:radius="5dp"/>
                <gradient
                    android:startColor="@color/orange_dark"
                    android:centerColor="@color/splash_background"
                    android:endColor="@color/orange_light"
                    android:angle="180" />
            </shape>
        </clip>
    </item>
</layer-list>
